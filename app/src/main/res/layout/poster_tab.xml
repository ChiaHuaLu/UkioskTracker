<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="chiahua.ukiosktracker.PosterTab">

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/posterTabfab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:baselineAlignBottom="false"
        app:backgroundTint="@color/colorAccent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/add"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="80dp" />

    <Button
        android:id="@+id/sort_button"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:background="?attr/colorButtonNormal"
        android:drawableLeft="@drawable/sort"
        android:drawablePadding="@dimen/regular_font"
        android:drawableStart="@drawable/sort"
        android:padding="@dimen/regular_font"
        android:text="@string/sortby"
        android:textAlignment="textStart"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/allPostersLV"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="56dp"
        android:layout_marginTop="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sort_button"
        app:layout_constraintVertical_bias="1.0" />


</android.support.constraint.ConstraintLayout>
